{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Optexity Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "appearance": {
    "default": "light"
  },
  "favicon": "/logo/Optexity_logo_small.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "docs/getting_started/introduction",
              "docs/getting_started/installation"
            ]
          },
          {
            "group": "Recording the workflow",
            "pages": [
              "docs/recording/recording"
            ]
          },
          {
            "group": "Editing the workflow",
            "pages": [
              "docs/editing/editing"
            ]
          },
          {
            "group": "Running the workflow",
            "pages": [
              "docs/running/running"
            ]
          },
          {
            "group": "Tools",
            "pages": [
              "docs/tools/2fa",
              "docs/tools/captcha"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/create",
              "api-reference/endpoint/get",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.optexity.com",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://optexity.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo_optexity_black.svg",
    "dark": "/logo/logo_optexity.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:founders@optexity.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Main Website",
      "href": "https://optexity.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/optexity",
      "linkedin": "https://www.linkedin.com/company/optexity"
    }
  }
}
