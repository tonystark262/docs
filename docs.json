{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Optexity Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "docs/getting_started/index",
              "docs/getting_started/quickstart",
              "docs/getting_started/development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "docs/essentials/settings",
              "docs/essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "docs/essentials/markdown",
              "docs/essentials/code",
              "docs/essentials/images",
              "docs/essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://optexity.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://optexity.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://optexity.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo_optexity_black.svg",
    "dark": "/logo/logo_optexity.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:founders@optexity.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://optexity.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/optexity",
      "linkedin": "https://www.linkedin.com/company/optexity"
    }
  }
}
